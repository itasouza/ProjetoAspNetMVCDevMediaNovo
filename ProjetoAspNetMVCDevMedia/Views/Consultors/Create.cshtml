@model ProjetoAspNetMVCDevMedia.Models.Consultor

@{
    ViewBag.Title = "Create";
}




    <div class="row p-3">
        <div class="col-md-12 order-md-1">
            <h4 class="mb-3">Cadastro de consultor</h4>

            <form class="needs-validation" novalidate>
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label for="firstName">Nome do Consultor*</label>
                        @Html.EditorFor(model => model.Nome, new { placeholder = "", id = "firstName", htmlAttributes = new { @class = "form-control" } })
                        <div class="invalid-feedback">
                            O nome do consultor é obrigatório.
                        </div>
                    </div>

                </div>

                <hr class="mb-4">

                <div class="row">
                    <div class="col-md-2 mb-3">
                        <button class="btn btn-primary btn-sm" id="btnGravar" type="submit">
                            Gravar dados <i class="fas fa-save"></i>
                        </button>
                    </div>

                    <div class="col-md-2 mb-3">
                        <button class="btn btn-primary btn-sm" id="btnGravar" type="submit">
                            Gravar dados <i class="fas fa-save"></i>
                        </button>
                    </div>

                    <div class="col-md-2 mb-3">
                        <button class="btn btn-primary btn-sm" id="btnRetornar" type="submit">
                            Gravar dados <i class="fas fa-save"></i>
                        </button>

                        @*<a href="@Url.Action("Index", "Consultors" )" class="btn btn-warning btn-sm">Retornar</a>*@
                    </div>
                </div>

            </form>

        </div>
    </div>



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
